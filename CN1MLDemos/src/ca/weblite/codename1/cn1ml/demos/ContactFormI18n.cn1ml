<html>
    <head></head>
    <body layout="y">
        <script>
            self.setScrollableY(true);
        </script>
        <label uiid="Title" i18n="contact details">Contact Details</label>
        
        <table>
            <tr>
                <td i18n="first name">First Name</td>
                <td><input type="text" name="firstName"/></td>
            </tr>
            <tr>
                <td i18n="last name">Last Name</td>
                <td><input type="text" name="lastName"/></td>
            </tr>
            <tr>
                <td i18n="home country">Home Country</td>
                <td>
                    <select name="countrySelect">
                        <option i18n="Canada">Canada</option>
                        <option i18n="United States" >United States</option>
                        <option i18n="France">France</option>
                        <option i18n="Spain">Spain</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td colspan="2" i18n="bio label">Bio (Paragraph)</td>
            </tr>
            <tr>
                <td colspan="2">
                    <textarea name="bio" rows="5" cols="30" i18n="bioval">
                        <script>
                            self.setText("barrrrrrrr");
                            
                        </script>
                    </textarea>
                    
                </td>
            </tr>
        </table>
        <label uiid="Title" i18n="preferences">Preferences</label>
        <table>
            <tr>
                <td i18n="software">Software</td>
                <td><input type="checkbox" name="softwareCheckbox"/></td>
            
                <td i18n="hardware">Hardware</td>
                <td><input type="checkbox" name="hardwareCheckbox"/></td>
            </tr>
            
        </table>
        <button name="saveButton" i18n="save">Save</button>
        
        
    </body>
</html>